<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView_consumibles_aceite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_consumibles_aceite" />

    <ProgressBar
        android:id="@+id/progressBar_consumibles_aceite"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_consumibles_gasolina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_consumibles_gasolina" />

    <TextView
        android:id="@+id/textView_consumibles_llantas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_consumibles_llantas" />

    <TextView
        android:id="@+id/textView_consumibles_bateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_consumibles_bateria" />

    <TextView
        android:id="@+id/textView_consumibles_electricidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_consumibles_electricidad" />

    <Button
        android:id="@+id/button_consumibles_aceite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calcular" />

</LinearLayout>

